<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="recupracion.proyect.estadios.DetallesActivity">

    <include android:id="@+id/toolbar"
        layout="@layout/toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="62dp">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:id="@+id/cv">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"

                        android:id="@+id/ivImagen"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ivImagen"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre del Estadio"
                            android:textSize="25dp"
                            android:textStyle="bold"
                            android:id="@+id/tvName"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:text="Descripcion del estadio"
                            android:id="@+id/tvDescription"
                            android:layout_below="@+id/tvName"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_phone"
                            android:id="@+id/ivPhone"
                            android:layout_below="@+id/tvDescription"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:text="Telefono"
                            android:id="@+id/tvPhone"
                            android:layout_toRightOf="@+id/ivPhone"
                            android:layout_below="@id/tvDescription"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="2dp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_address"
                            android:id="@+id/ivAddress"
                            android:layout_below="@+id/ivPhone"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvAddress"
                            android:text="Direccion"
                            android:textSize="16dp"
                            android:layout_toRightOf="@id/ivAddress"
                            android:layout_below="@+id/ivPhone"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="2dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ciudad"
                            android:id="@+id/tvCity"
                            android:textSize="16dp"
                            android:layout_toRightOf="@id/tvAddress"
                            android:layout_below="@+id/ivPhone"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="5dp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_zip"
                            android:id="@+id/ivZip"
                            android:layout_below="@id/ivAddress"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:id="@+id/tvZip"
                            android:text="codigo zip"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="5dp"
                            android:layout_below="@id/ivAddress"
                            android:layout_toRightOf="@+id/ivZip"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_schedule"
                            android:id="@+id/ivSchedule"
                            android:layout_below="@+id/ivZip"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Horarios:"
                            android:textSize="16dp"
                            android:layout_below="@+id/ivZip"
                            android:layout_toRightOf="@+id/ivSchedule"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="5dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvSchedule"
                            android:text="start - end"
                            android:textSize="16dp"
                            android:layout_marginLeft="34dp"
                            android:layout_below="@+id/ivSchedule"
                            />

                    </RelativeLayout>

                </RelativeLayout>

            </ScrollView>
        </android.support.v7.widget.CardView>




    </RelativeLayout>



</RelativeLayout>
